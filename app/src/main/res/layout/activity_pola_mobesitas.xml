<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:background="@drawable/bakground_food"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="com.example.aprylianmaulana.healthycare.PolaMObesitas">

    <android.support.v7.widget.CardView
        android:id="@+id/cv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textobesitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pola Makan Untuk Berat Badan Obesitas"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/imgobesitas"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_below="@id/textobesitas"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/orangobesitas"/>

        <TextView
            android:id="@+id/jdlobesitas1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imgobesitas"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="1. Berhenti Konsumsi Junk Food"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/isiobesitas1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/jdlobesitas1"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="@string/isi_obesitas1"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/jdlobesitas2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/isiobesitas1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="2. Hindari Konsumsi Gula"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/isiobesitas2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/jdlobesitas2"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="@string/isi_obesitas2"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/jdlobesitas3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/isiobesitas2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="3. Lakukan Diet Rendah Karbohidrat"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/isiobesitas3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/jdlobesitas3"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="@string/isi_obesitas3"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/jdlobesitas4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/isiobesitas3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="4. Perbanyak Asupan Buah dan Sayuran"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/isiobesitas4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/jdlobesitas4"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:text="@string/isi_obesitas4"
            android:textSize="15sp"/>

        </RelativeLayout>
        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv7"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/menuMakan4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saran Menu Makan"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/jdlsarapan4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuMakan4"
            android:text="Sarapan"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/sarapanobesitas1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jdlsarapan4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="1. Oatmeal"/>
        <TextView
            android:id="@+id/sarapanobesitas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sarapanobesitas1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="2. Buah Strawberry"/>
        <TextView
            android:id="@+id/sarapanobesitas3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sarapanobesitas2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="3. Buah Blueberry"/>
        <TextView
            android:id="@+id/sarapanobesitas4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sarapanobesitas3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="4. Kacang Almond"/>

        <TextView
            android:id="@+id/jdlmaksi4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sarapanobesitas4"
            android:text="Makan Siang"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/maksiobesitas1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jdlmaksi4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="1. Dada Ayam Kukus (1 potong)"/>
        <TextView
            android:id="@+id/maksiobesitas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maksiobesitas1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="2. Kentang Kukus (1/2 cangkir)"/>
        <TextView
            android:id="@+id/maksiobesitas3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maksiobesitas2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="3. Wortel dan Kacang Panjang Kukus"/>
        <TextView
            android:id="@+id/maksiobesitas4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maksiobesitas3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="4. Buah Pear"/>

        <TextView
            android:id="@+id/jdlmakmal4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maksiobesitas4"
            android:text="Makan Malam"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/makmalobesitas1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jdlmakmal4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="1. Salad Sayuran Segar"/>
        <TextView
            android:id="@+id/makmalobesitas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/makmalobesitas1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="2. Potongan Ikan Tuna Panggang"/>
        <TextView
            android:id="@+id/makmalobesitas3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/makmalobesitas2"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="3. Secangkir Air Perasan Lemon Hangat"/>


        </RelativeLayout>
        </android.support.v7.widget.CardView>


</RelativeLayout>
    </ScrollView>
