<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:background="@drawable/bakground_food"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.aprylianmaulana.healthycare.PolaMGemuk">


        <android.support.v7.widget.CardView
            android:id="@+id/cv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textgemuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pola Makan Untuk Berat Badan Gemuk"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:id="@+id/imggemuk"
                    android:layout_width="300dp"
                    android:layout_height="170dp"
                    android:layout_below="@id/textgemuk"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/oranggemuk"/>

                <TextView
                    android:id="@+id/jdlgemuk1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/imggemuk"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="1. Buatlah Jadwal Jam Makan"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/isigemuk1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/jdlgemuk1"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/isi_gemuk1"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/jdlgemuk2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/isigemuk1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="2. Ganti Asupan Makanan Dengan yang Sehat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/isigemuk2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/jdlgemuk2"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/isi_gemuk2"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/jdlgemuk3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/isigemuk2"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="3. Siapkan Camilan Sehat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/isigemuk3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/jdlgemuk3"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/isi_gemuk3"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/jdlgemuk4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/isigemuk3"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="4. Hindari Makan Berat di Malam Hari"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/isigemuk4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/jdlgemuk4"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/isi_gemuk4"
                    android:textSize="15sp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv5"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/menuMakan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saran Menu Makan"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/jdlsarapan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuMakan3"
            android:text="Sarapan"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/sarapangemuk1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jdlsarapan3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="1. Bubur Ayam / Sereal"/>
        <TextView
            android:id="@+id/sarapangemuk2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sarapangemuk1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="2. Buah Pisang"/>
        <TextView
            android:id="@+id/sarapangemuk3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sarapangemuk2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="3. Susu Low Fat"/>

        <TextView
            android:id="@+id/jdlmaksi3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sarapangemuk3"
            android:text="Makan Siang"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/maksigemuk1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jdlmaksi3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="1. Nasi Putih (Disarankan Nasi Merah) 1/2 Porsi"/>
        <TextView
            android:id="@+id/maksigemuk2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maksigemuk1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="2. Ikan Goreng"/>
        <TextView
            android:id="@+id/maksigemuk3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maksigemuk2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="3. Sayur sop"/>
        <TextView
            android:id="@+id/maksigemuk4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maksigemuk3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="4. Jus Buah"/>

        <TextView
            android:id="@+id/jdlmakmal3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maksigemuk4"
            android:text="Makan Malam"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/makmalgemuk1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jdlmakmal3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="1. Sepotong Ayam Pangang / Bakar"/>
        <TextView
            android:id="@+id/makmalgemuk2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/makmalgemuk1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="2. Kentang Kukus (1/2 cangkir)"/>
        <TextView
            android:id="@+id/makmalgemuk3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/makmalgemuk2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="3. Brokoli Kukus (1/2 cangkir)"/>

        <TextView
            android:id="@+id/makmalgemuk4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/makmalgemuk3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="4. Buah Anggur"/>

        </RelativeLayout>
        </android.support.v7.widget.CardView>


</RelativeLayout>
    </ScrollView>
